<UserControl x:Class="SpacedRepetitionTrainer.LearnCardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpacedRepetitionTrainer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Was bedeutet der Begriff" HorizontalAlignment="Center" Foreground="#c0c0c0" FontSize="14" Grid.Row="0" />
        <TextBlock Name="TermLabel" Foreground="#f0f0f0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Padding="0 75 0 0" Grid.Row="1"/>
        <StackPanel Name="ButtonPanel" Grid.Row="2" Margin="0 75 0 0" />
    </Grid>
</UserControl>
