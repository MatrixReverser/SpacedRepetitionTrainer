<Window x:Class="SpacedRepetitionTrainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpacedRepetitionTrainer"
        mc:Ignorable="d"
        Title="Spaced Repetition Trainer" Height="450" Width="800">
    <Grid>
        <!-- Überschrift -->
        <TextBlock Name="AppTitle"
                   Text="Vocabulary Set"
                   FontWeight="Bold"
                   Background="#c97000"
                   Foreground="White"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Padding="10"
                   FontSize="20"/>

        <!-- Container -->
        <Border Name = "ContentPanel"
                Background="#2a2a2a"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="0,40,0,0" />
        <!-- Adjust margin to leave space for the header -->
    </Grid>
</Window>
